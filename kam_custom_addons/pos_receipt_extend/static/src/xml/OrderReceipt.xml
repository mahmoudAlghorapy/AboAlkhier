<?xml version="1.0" encoding="UTF-8"?>
<!--To add the customer details in the settings page-->
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.ReceiptHeader"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//div[1]" position="replace">
        </xpath>

        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="replace">
            <div class="pos-receipt-header" style="text-align:center; ">

    <div dir="rtl">
        <t t-esc="env.services.pos.company.name"/>
    </div>

                <div dir="rtl">
        الهاتف:
        <span dir="ltr">
            <t t-esc="env.services.pos.company.phone"/>
        </span>
    </div>

                <!--                <div dir="rtl">-->
                <!--        الرقم الضريبي:-->
                <!--        <span dir="ltr">-->
                <!--            <t t-esc="env.services.pos.company.vat"/>-->
                <!--        </span>-->
                <!--    </div>-->

                <div>--------------------------</div>

                <div dir="rtl">
        شكراً لاختيارك أبو الخير
    </div>

                <div>--------------------------</div>

</div>

            <!--            <div t-if="order?.getCashierName()" class="cashier">-->
            <!--                    <div> <t t-esc="order.getCashierName()"/>:تم بواسطة </div>-->
            <!--                </div>-->

        </xpath>
        <xpath expr="//div[@t-if='order.partner_id.name']" position="replace">
            <div t-if="order.config.customer_name and order.partner_id.name" dir="rtl">الاسم:
                <t t-out="order.partner_id.name"/>
            </div>
            <span t-else="">
                <div t-if="order.partner_id.name">
                    <t t-if="order.partner_id.parent_name">
                        <span t-esc="order.partner_id.parent_name"/>,
                    </t>
                    <span t-esc="order.partner_id.name"/>
                </div>
            </span>
        </xpath>
        <xpath expr="//div[@t-if='order.partner_id.pos_contact_address']" position="replace">
            <div t-if="order.config.customer_address and order.partner_id.pos_contact_address" dir="rtl">العنوان:
                <t t-out="order.partner_id.pos_contact_address"/>
            </div>
            <span t-else="">
                <div t-if="order.partner_id.pos_contact_address">
                    <span t-esc="order.partner_id.pos_contact_address"/>
                </div>
            </span>
        </xpath>
        <xpath expr="//div[@t-if='order.partner_id.vat']" position="replace">
            <div t-if="order.config.customer_vat and order.partner_id.vat" dir="rtl">Vat:
                <t t-out="order.partner_id.vat"/>
            </div>
            <span t-else="">
                <div t-if="order.partner_id.vat">
                    <span t-esc="order.partner_id.vat"/>
                </div>
            </span>
        </xpath>
       <xpath expr="//div[@t-if='order.partner_id']" position="after">

    <span t-if="order.config.customer_mobile and order.partner_id.mobile"
          class="pos-receipt-customer"
          dir="rtl"
          style="display:block; text-align:right;">
        الجوال:
        <span dir="ltr">
            <t t-out="order.partner_id.mobile"/>
        </span>
    </span>

    <span t-if="order.config.customer_phone and order.partner_id.phone"
          class="pos-receipt-customer"
          dir="rtl"
          style="display:block; text-align:right;">
        الهاتف:
        <span dir="ltr">
            <t t-out="order.partner_id.phone"/>
        </span>
    </span>

    <span t-if="order.config.customer_email and order.partner_id.email"
          class="pos-receipt-customer"
          dir="rtl"
          style="display:block; text-align:right;">
        البريد الإلكتروني:
        <span dir="ltr">
            <t t-out="order.partner_id.email"/>
        </span>
    </span>

</xpath>
    </t>
</templates>
