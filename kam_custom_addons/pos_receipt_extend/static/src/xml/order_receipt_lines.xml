        <div style="font-size:14px;" dir="rtl">

    <t t-foreach="order.lines" t-as="line" t-key="line.id">

        <!-- Product name and unit -->
        <div class="d-flex justify-content-between"
             style="font-size:12px; margin-bottom:10px; white-space:nowrap;">

    <!-- RIGHT TO LEFT SIDE -->
            <div dir="rtl" style="white-space:nowrap;">

        <span style="margin-left:6px;">
            <t t-esc="line.getQuantity()"/>
        </span>

                <span>
            <t t-esc="line.product_id.name"/>
        </span>

                <span style="font-size:12px; color:#666; margin-right:6px;">
            / <t t-esc="line.product_id.uom_id.name"/>
        </span>

                <!-- UNIT PRICE -->
                <span style="color:#888; margin-right:6px;">
            <t t-if="line.getQuantity()">
                <t t-esc="formatCurrency(line.prices.total_included / line.getQuantity())"/>
            </t>
                    <t t-else="">0</t>
        </span>

    </div>

            <!-- LEFT TO RIGHT SIDE -->
            <div dir="ltr" style="white-space:nowrap;">
        <span>
            <t t-esc="formatCurrency(line.prices.total_included)"/>
        </span>
    </div>

</div>


        <!-- Quantity and total price -->
        <div class="d-flex justify-content-between"
             style="font-size:12px; margin-bottom:10px;">

<!--            &lt;!&ndash; Quantity (from right) &ndash;&gt;-->
            <!--            <div dir="rtl">-->

            <!--            </div>-->

            <!-- Line total -->


        </div>

    </t>

</div>

            </xpath>


    <!-- ========== TOTAL ========== -->
    <xpath expr="//div[contains(@class,'receipt-total')]" position="replace">

       <div dir="rtl" class="fw-bold d-flex justify-content-between">
            <span>الإجمالي</span>
           <span dir="ltr">
                <t t-esc="formatCurrency(order.priceIncl)"/>
            </span>
        </div>

        <div dir="rtl" class="d-flex justify-content-between">
                <span>التقريب</span>
            <span dir="ltr">
                    <t t-esc="formatCurrency(order.appliedRounding)"/>
                </span>
            </div>

        <!-- ========= للسداد ========= -->
        <div dir="rtl" class="fw-bold d-flex justify-content-between border-top pt-1 mt-1">
            <span>للسداد</span>
            <span dir="ltr">
                <t t-esc="formatCurrency(order.priceIncl + order.appliedRounding)"/>
            </span>
        </div>

    </xpath>

    <!-- ========== ROUNDING ========== -->
    <xpath expr="//t[@t-if='order.appliedRounding']" position="replace">
