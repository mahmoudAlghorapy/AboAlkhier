<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Define the privilege category -->
    <record id="access_roles_privilege_category" model="res.groups.privilege">
        <field name="name">Access Role</field>
        <field name="sequence">10</field>
    </record>
    <!-- Define the Access Role User group -->
    <record id="access_role_group_user" model="res.groups">
        <field name="name">Access Role User</field>
        <field name="privilege_id" ref="access_roles_privilege_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Access to access roles</field>
    </record>
    <!-- Define the Administrator group -->
    <record id="access_role_group_administrator" model="res.groups">
        <field name="name">Administrator</field>
        <field name="privilege_id" ref="access_roles_privilege_category"/>
        <field name="implied_ids" eval="[(4, ref('access_roles.access_role_group_user'))]"/>
        <field name="user_ids" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        <field name="comment">Administrator access to access roles</field>
    </record>
</odoo>