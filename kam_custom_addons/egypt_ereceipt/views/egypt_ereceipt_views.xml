<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="egypt_ereceipt_tree_view" model="ir.ui.view">
            <field name="name">egypt.ereceipt.tree</field>
            <field name="model">egypt.ereceipt</field>
            <field name="arch" type="xml">
                <list string="Egypt e-Receipts" decoration-success="state=='accepted'" decoration-danger="state=='error'" decoration-warning="state=='retry'">
                    <field name="uuid"/>
                    <field name="pos_order_id"/>
                    <field name="company_id"/>
                    <field name="state"/>
                    <field name="request_date"/>
                    <field name="receipt_number"/>
                    <field name="retry_count"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="egypt_ereceipt_form_view" model="ir.ui.view">
            <field name="name">egypt.ereceipt.form</field>
            <field name="model">egypt.ereceipt</field>
            <field name="arch" type="xml">
                <form string="Egypt e-Receipt">
                    <header>
                        <button name="action_submit_receipt" type="object" string="Submit Receipt" class="btn-primary" invisible="eta_status == 'valid'"/>
                        <button name="action_retry_submission" type="object" string="Retry Submission" class="btn-secondary" invisible="state != 'error'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,accepted"/>
                    </header>
                    <sheet>
                        <field name="eta_status" invisible="1"/>
                        <widget name="web_ribbon" title="Valid" bg_color="bg-success" invisible="eta_status != 'valid'"/>
                        <widget name="web_ribbon" title="Invalid" bg_color="bg-danger" invisible="eta_status != 'invalid'"/>
                        <widget name="web_ribbon" title="Undetected" bg_color="bg-warning" invisible="eta_status != 'undetected'"/>

                        <div class="oe_title">
                            <h1>
                                <field name="uuid" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="pos_order_id" readonly="1"/>
                                <field name="company_id" readonly="1"/>
                                <field name="submission_uuid" readonly="1" invisible="not submission_uuid"/>
                                <field name="receipt_number" readonly="1" invisible="not receipt_number"/>
                            </group>
                            <group>
                                <field name="request_date" readonly="1"/>
                                <field name="accepted_date" readonly="1" invisible="not accepted_date"/>
                                <field name="retry_count" readonly="1"/>
                                <field name="next_retry_date" readonly="1" invisible="not next_retry_date"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Receipt Data" name="receipt_data">
                                <field name="receipt_data" widget="ace" ace_mode="json"/>
                            </page>
                            <page string="API Response" name="api_response" invisible="not api_response">
                                <field name="api_response" widget="ace" ace_mode="json"/>
                            </page>
                            <page string="QR Code" name="qr_code" invisible="not qr_code">
                                <field name="qr_code" widget="text"/>
                                <div class="alert alert-info" role="alert">
                                    QR Code data for receipt validation
                                </div>
                            </page>
                            <page string="Error Details" name="error_details" invisible="not error_message">
                                <field name="error_message" widget="text"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="egypt_ereceipt_search_view" model="ir.ui.view">
            <field name="name">egypt.ereceipt.search</field>
            <field name="model">egypt.ereceipt</field>
            <field name="arch" type="xml">
                <search string="Egypt e-Receipts">
                    <field name="uuid"/>
                    <field name="pos_order_id"/>
                    <field name="receipt_number"/>
                    <field name="submission_uuid"/>

                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                    <filter string="Accepted" name="accepted" domain="[('state', '=', 'accepted')]"/>
                    <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                    <filter string="Retry Pending" name="retry" domain="[('state', '=', 'retry')]"/>

                    <separator/>
                    <filter string="Today" name="today" domain="[('create_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter string="This Week" name="this_week" domain="[('create_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>

                    <group>
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="egypt_ereceipt_action" model="ir.actions.act_window">
            <field name="name">Egypt e-Receipts</field>
            <field name="res_model">egypt.ereceipt</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_today': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No e-Receipts found
                </p>
                <p>
                    e-Receipts are automatically created when POS orders are validated.
                    Make sure the Egypt e-Receipt integration is enabled in Settings.
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="egypt_ereceipt_menu_root" name="Egypt e-Receipt" sequence="100" web_icon="egypt_ereceipt,static/description/icon.png" groups="group_egypt_ereceipt_user"/>
        <menuitem id="egypt_ereceipt_menu" name="e-Receipts" parent="egypt_ereceipt_menu_root" action="egypt_ereceipt_action" sequence="10"/>
    </data>
</odoo>