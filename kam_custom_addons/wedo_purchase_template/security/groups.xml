<odoo>
    <record id="order_tag_group" model="res.groups">
        <field name="name">Group Order Tag</field>
        <field name="user_ids" eval="[(4, ref('base.user_admin'))]"/>
    </record>
    <record id="purchase_order_price_group" model="res.groups">
        <field name="name">Group Purchase Price</field>
        <field name="user_ids" eval="[(4, ref('base.user_admin'))]"/>
    </record>
    <record id="account_users_group" model="res.groups">
        <field name="name">Accounting Users Group</field>
        <field name="user_ids" eval="[(4, ref('base.user_admin'))]"/>
    </record>
     <record model="ir.ui.menu" id="account.menu_finance">
            <field name="group_ids" eval="[(4, ref('wedo_purchase_template.account_users_group'))]"/>
        </record>
    <record model="ir.ui.menu" id="account.menu_finance">
            <field name="group_ids" eval="[(4, ref('wedo_purchase_template.account_users_group'))]"/>
        </record>
    <record id="rule_purchase_order_template_multi_company" model="ir.rule">
        <field name="name">purchase.order.template multi-company</field>
        <field name="model_id" ref="model_purchase_order_template"/>
        <field name="domain_force">['|', ('company_ids','=', False), ('company_ids','in', company_ids)]</field>
    </record>
    <record id="product_pricelist_template_multi_company" model="ir.rule">
        <field name="name">product_pricelist multi-company</field>
        <field name="model_id" ref="product.model_product_pricelist"/>
        <field name="domain_force">['|', ('company_ids','=', False), ('company_ids','in', company_ids)]</field>
    </record>
    <record id="rule_product_template_multi_company" model="ir.rule">
    <field name="name">product.template multi-company</field>
    <field name="model_id" ref="model_product_template"/>
    <field name="global" eval="True"/>
    <field name="domain_force">
        [

            '|',
            ('company_ids', '=', False),
            ('company_ids', 'in', company_ids),
            '|',
            ('categ_id.company_ids', '=', False),
            ('categ_id.company_ids', 'in', company_ids)
        ]
    </field>
</record>

    <record id="rule_product_product_multi_company" model="ir.rule">
    <field name="name">product.product multi-company</field>
    <field name="model_id" ref="product.model_product_product"/>
    <field name="global" eval="True"/>
    <field name="domain_force">
        [

            '|',
            ('company_ids', '=', False),
            ('company_ids', 'in', company_ids),
            '|',
            ('categ_id.company_ids', '=', False),
            ('categ_id.company_ids', 'in', company_ids)
        ]
    </field>
</record>

    <record id="rule_product_category_multi_company" model="ir.rule">
        <field name="name">product.category multi-company</field>
        <field name="model_id" ref="model_product_category"/>
        <field name="domain_force">['|', ('company_ids','=', False), ('company_ids','in', company_ids)]</field>
    </record>

    <record id="group_stock_packaging" model="res.groups">
        <field name="name">Manage Product Packaging</field>
    </record>
</odoo>