<?xml version="1.0" ?>
<odoo>
    <record model="ir.ui.view" id="product_pricelist_form_view">
        <field name="name">product.pricelist form view (with multi-company)</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view" />
        <field name="arch" type="xml">

            <xpath
                expr="//field[@name='company_id']" position="replace">
                <field
                    name="company_ids"
                    groups="base.group_multi_company"
                    widget="many2many_tags"
                    options="{'no_create': True}"
                />
<!--                                <field name="company_id" class="invisible" />-->

            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="product_pricelist_list_view">
        <field name="name">product.pricelist list view (with multi-company)</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view_tree" />
        <field name="arch" type="xml">

            <xpath
                expr="//field[@name='company_id']" position="replace">
                <field
                    name="company_ids"
                    groups="base.group_multi_company"
                    widget="many2many_tags"
                    options="{'no_create': True}"
                />
<!--                                <field name="company_id" class="invisible" />-->

            </xpath>
        </field>
    </record>
</odoo>
