<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_account_move_document" inherit_id="account.report_invoice_document">
       <xpath expr="//div[4]" position="inside">

    <!-- Order For -->
    <div t-if="o.sub_vendor_id" class="col">
        <strong>Order For</strong>
        <div t-field="o.sub_vendor_id"/>
    </div>

    <!-- Order Tags -->
    <div t-if="o.order_tag_ids" class="col">
        <strong>Order Tags</strong>
        <div class="d-flex flex-wrap mt-1">
            <span t-foreach="o.order_tag_ids"
                  t-as="tag"
                  t-esc="tag.name"
                  t-attf-class="badge rounded-pill o_tag o_tag_color_#{tag.color} me-1 mb-1"/>
        </div>
    </div>

</xpath>

    </template>
</odoo>