<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_sale_order_document" inherit_id="sale.report_saleorder_document">
       <xpath expr="//div[@id='informations']" position="inside">

    <!-- Order For -->
    <div t-if="doc.sub_vendor_id" class="col">
        <strong>Order For</strong>
        <div t-field="doc.sub_vendor_id"/>
    </div>

    <!-- Order Tags -->
    <div t-if="doc.order_tag_ids" class="col">
        <strong>Order Tags</strong>
        <div class="d-flex flex-wrap mt-1">
            <span t-foreach="doc.order_tag_ids"
                  t-as="tag"
                  t-esc="tag.name"
                  t-attf-class="badge rounded-pill o_tag o_tag_color_#{tag.color} me-1 mb-1"/>
        </div>
    </div>

</xpath>

    </template>
</odoo>