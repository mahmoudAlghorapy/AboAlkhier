<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_users_view_form_inherit_pos" model="ir.ui.view">
        <field name="name">res.users.form.inherit.pos</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='page_security']" position="after">
                <page name="pos_delete_restrict" string="Point of Sale">
                    <group>
                        <field name="restrict_delete_access" groups="base.group_system"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>